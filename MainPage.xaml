<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeSplit.MainPage"
             Background="#333333"
             >

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Grid ColumnSpacing="10" MaximumWidthRequest="600">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Entry Grid.Column="0" Text="$0.00" HorizontalOptions="FillAndExpand"/>
                <Picker x:Name="PeopleCountPicker" Grid.Column="1" HorizontalOptions="Center">
                </Picker>
            </Grid>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
