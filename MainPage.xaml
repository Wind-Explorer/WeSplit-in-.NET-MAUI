<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeSplit.MainPage"
             >

    <Grid>
        <ScrollView Background="{AppThemeBinding Light=#f9f9f9, Dark=#272727}">
            <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center"
            Background="{AppThemeBinding Light=#f9f9f9, Dark=#272727}"
            >
                <Grid ColumnSpacing="10" MaximumWidthRequest="500">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <Entry Grid.Column="0" Text="$0.00" HorizontalOptions="FillAndExpand" Background="{AppThemeBinding Light=#f6f6f6, Dark=#323232}"/>
                    <Picker x:Name="PeopleCountPicker" Grid.Column="1" HorizontalOptions="FillAndExpand">
                    </Picker>
                </Grid>
            </VerticalStackLayout>
        </ScrollView>
    </Grid>
</ContentPage>
